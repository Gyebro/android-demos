<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- color palette -->
        <item name="colorPrimary">@color/brownPrimary</item>
        <item name="colorPrimaryDark">@color/brownPrimaryDark</item>
        <item name="colorAccent">@color/silverAccent</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- specify enter and exit transitions -->
        <!--
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        -->

        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/change_bounds</item>
        <item name="android:windowSharedElementExitTransition">@transition/change_bounds</item>
    </style>

</resources>